<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>email</th>
      </tr>

      <% @user.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>

        <td>
          <a href="/user/<%= user.id %>" class="btn btn-primary">Show</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
