<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= current_user.username %></dd>

      <dt>Email</dt>
      <dd><%= current_user.email %></dd>

      <dt>Images</dt>

      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <tr>
              <th>Photo</th>
              <th>Name</th>
              <th>User</th>
              <th>Actions</th>
            </tr>

      <%@like.each do |like|%>
      <tr>

        <%if like.photo != nil%>
        <td>
        <img src="<%=like.photo.image%>" width="200" /></td>

        <td><%= like.photo.caption %></td>
        <td><%= like.photo.user.username %></td>
        <% end %>

        <td>
        <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
        <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>

        <%end%>




    </dl>


  </div>
  </div>
